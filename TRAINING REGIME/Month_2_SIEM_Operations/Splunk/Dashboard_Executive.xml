<dashboard version="1.1" theme="dark">
  <label>SOC Executive Overview</label>
  <description>Real-time threat visibility across the enterprise.</description>
  <row>
    <panel>
      <title>High Severity Alerts (Last 24h)</title>
      <single>
        <search>
          <query>index=alerts severity=high | stats count</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="rangeValues">[0,1,5,10]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Top 10 Attacked Internal Hosts</title>
      <chart>
        <search>
          <query>index=alerts | top limit=10 dest_host</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <title>Alert Distribution by Tactic (MITRE)</title>
      <chart>
        <search>
          <query>index=alerts | stats count by mitre_tactic</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>
  </row>
</dashboard>
